[alias]
	a = add
	ap = add -p
	b = branch
	bD = branch -d
	c- = checkout --
	c = commit
	ca = commit --amend
	cae = commit --amend --no-edit
    caea = commit --amend --no-edit --reset-author
	capf = !git commit --amend --no-edit --reset-author && git push -f origin HEAD
	cb = checkout -b
	cd = diff-tree --no-commit-id --name-only -r
	co = checkout
	cm = checkout master
	cp = cherry-pick
	cpc = cherry-pick --continue
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch -ap
	l = log
	la = "!git config -l | grep alias | cut -c 7-"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lo = log --oneline
	nb = checkout -B
	p = push
	ph = push origin HEAD
	phf = push -f origin HEAD
	pm = pull origin master
	po = pull origin
	rb = rebase
	rbc = rebase --continue
	rbom = rebase origin/master
	rbs = rebase --skip
	rH = reset HEAD
	s = status --short
	st = status
	sh = stash
	shp = stash pop
	sui = submodule update --init
	sur = submodule update --remote
	u = update
	update = !git fetch -ap && git pull origin

[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
