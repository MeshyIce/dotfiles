[alias]
	a = add
	ap = add -p
	b = branch
    bd = branch -D
	c = commit
	ca = commit --amend
    cae = commit --amend --no-edit
    caea = commit --amend --no-edit --reset-author
    cb = checkout -b
	cd = diff-tree --no-commit-id --name-only -r
	co = checkout
	cm = checkout master
    cp = cherry-pick
    cpc = cherry-pick --continue
    c- = checkout --
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch -ap
	l = log
	la = "!git config -l | grep alias | cut -c 7-"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lo = log --oneline
	lp = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
	ls = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
	p = push
	ph = push origin HEAD
	phf = push -f origin HEAD
	pm = pull origin master
	po = pull origin
    rb = rebase
    rbc = rebase --continue
    rbom = rebase origin/master
    rbs = rebase --skip
    rH = rebase HEAD
	s = status --short
    sh = stash
    shp = stash pop
	st = status
	sui = submodule update --init
	sur = submodule update --remote
	u = update
	update = !git fetch -ap && git pull origin

[core]
	editor = vim
