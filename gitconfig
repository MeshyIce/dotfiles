[alias]
	a = add
	ap = add -p
	b = branch
	c = commit
	ca = commit --amend
	cd = diff-tree --no-commit-id --name-only -r
	co = checkout
	cm = checkout master
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch -ap
	l = log
	la = "!git config -l | grep alias | cut -c 7-"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lo = log --oneline
	lp = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
	ls = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
	p = push
	ph = push origin HEAD
	phf = push -f origin HEAD
	pm = pull origin master
	po = pull origin
	s = status --short
	st = status
	sui = submodule update --init
	sur = submodule update --remote
	u = update
	update = !git fetch && git pull origin
[user]
	email = yuval.meshorer@aquasec.com
	name = Yuval Meshorer
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
[merge]
	tool = vimdiff
